{
    "name": "ffmpeg-d",
    "description": "FFmpeg Bindings",
    "copyright": "Copyright Â© 2013",
    "license": "LGPL-2.1",
    "authors": [
        "Sumit Raja",
        "donglei",
        "Relja Ljubobratovic"
    ],

    "libs": [
        "avcodec",
        "avdevice",
        "avfilter",
        "avformat",
        "avutil",
        "swresample",
        "swscale"
    ],

    "buildTypes": {
        "unittest": {
            "buildOptions": ["unittests"],
            "sourcePaths": ["./source/ffmpeg", "./test/"]
        }
    },

    "configurations": [
        {
            "name": "source",
            "targetType": "sourceLibrary",
            "excludedSourceFiles": ["source/ffmpeg/libpostproc/*"]
        },
        {
            "name": "static",
            "targetType": "staticLibrary",
            "excludedSourceFiles": ["source/ffmpeg/libpostproc/*"]
        },
        {
            "name": "source-GPL",
            "targetType": "sourceLibrary",
            "libs": ["postproc"]
        },
        {
            "name": "static-GPL",
            "targetType": "staticLibrary",
            "libs": ["postproc"]
        },
        {
            "name": "remux_example",
            "targetType": "executable",
            "mainSourceFile": "examples/remux_example.d",
            "targetName": "remux_example"
        },
        {
            "name": "encode_example",
            "targetType": "executable",
            "mainSourceFile": "examples/encode_example.d",
            "targetName": "encode_example"
        }
    ]
}
